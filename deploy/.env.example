# One-click dev .env for docker compose
MYSQL_ROOT_PASSWORD=123456
MYSQL_DATABASE=fitpulse_db
# Use 3307 by default to avoid conflict with local MySQL
MYSQL_PORT=3307
TZ=Asia/Shanghai

BACKEND_PORT=8080
FRONTEND_PORT=80

# Frontend API base called by browser (include servlet context path)
VITE_API_BASE=http://localhost:8080/api

# Optional LLM provider keys (leave empty for local tests)
OPENAI_API_KEY=
DASHSCOPE_API_KEY=

# Restart policy for containers (no|always|on-failure|unless-stopped)
RESTART_POLICY=no
